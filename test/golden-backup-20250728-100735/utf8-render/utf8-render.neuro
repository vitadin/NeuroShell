%% UTF-8 character rendering test for \render command
\set[_echo_command="true"]

%% Test basic UTF-8 characters with syntax highlighting
\render Basic UTF-8: café, naïve, résumé

%% Test non-Latin scripts  
\render Non-Latin: 日本語, Ελληνικά, Русский

%% Test symbols and punctuation
\render Symbols: — – "" … 

%% Test emojis in render context
\render Emojis: 🚀 ✨ 🌟 💫 ⭐

%% Test mathematical symbols
\render Math: π ∑ ∞ ≠ ≤ ≥

%% Test currency symbols
\render Currency: € £ ¥ ₽ ₹

%% Test variable interpolation with UTF-8 in render
\set[utf8_content="café with 🚀 and — dash"]
\render Interpolated: ${utf8_content}

%% Test complex UTF-8 mixing in render context
\render Complex: "Hello" said the café owner in 日本語

%% Verify output storage preserves UTF-8
\get[_output]

%% Test render with UTF-8 in different contexts
\render Code-like: function café() { return "🚀"; }

%% Verify final output
\get[_output]