%% Basic test for \try command with successful and failing operations
\set[_echo_command="true"]
%% This test verifies \try captures errors without terminating execution

%% Test successful bash command
\try \bash echo "success test"
\get[@status]
\get[@error]
\get[_output]

%% Test failing bash command
\try \bash ls /nonexistent_directory_xyz
\get[@status]
\get[@error]

%% Test successful set command
\try \set[testvar=hello]
\get[@status]
\get[testvar]

%% Test failing set command (invalid global variable)
\try \set[_invalid_global=value]
\get[@status]
\get[@error]

%% Test unknown command
\try \unknown_command_xyz
\get[@status]
\get[@error]