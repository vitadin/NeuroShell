%% Test session-show error handling scenarios
\set[_echo_command="true"]

%% Test behavior when no sessions exist
\session-show

%% Create some sessions for testing
\session-new test_session_one
\session-new test_session_two  
\session-new another_session

%% Clear active session to test no-active-session case
\session-activate test_session_one
\session-delete test_session_one

%% Test no active session but sessions exist (should show guidance)
\session-show

%% Test non-existent session by name
\try \session-show nonexistent_session_name
\get[_error]

%% Test non-existent session by ID
\try \session-show[id=true] xyz999999
\get[_error]

%% Test ambiguous session name (multiple matches)
\try \session-show test_session
\get[_error]

%% Test successful resolution after fixing ambiguity
\session-show test_session_two

%% Clean up remaining sessions
\session-delete test_session_two
\session-delete another_session

%% Test behavior when all sessions are deleted
\session-show