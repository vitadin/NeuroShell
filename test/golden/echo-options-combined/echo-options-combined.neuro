%% Echo command combined options test
%% Tests various combinations of echo command options

%% Test raw + silent + custom variable
\echo[raw=true,silent=true,to=test1] Silent\nraw\tmode
\get[test1]

%% Test normal + silent + custom variable
\echo[raw=false,silent=true,to=test2] Silent\ninterpreted\tmode
\get[test2]

%% Test raw + silent + default variable
\echo[raw=true,silent=true] Default\nvariable\traw
\get[_output]

%% Test normal + silent + default variable  
\echo[raw=false,silent=true] Default\nvariable\tinterpreted
\get[_output]

%% Test raw + verbose (no silent) + custom variable
\echo[raw=true,to=test3] Verbose\nraw\tmode
\get[test3]

%% Test normal + verbose (no silent) + custom variable
\echo[raw=false,to=test4] Verbose\ninterpreted\tmode
\get[test4]

%% Test with variable interpolation and combined options
\set[message="Hello\nWorld"]
\echo[raw=true,silent=true,to=combo1] Variable: ${message}\tEnd
\get[combo1]

\echo[raw=false,silent=true,to=combo2] Variable: ${message}\tEnd
\get[combo2]

%% Test all options together with complex content
\set[complex="Multi\nLine\tContent"]
\echo[raw=true,silent=true,to=final_test] Complex: ${complex}\nWith more\tescapes
\get[final_test]

%% Test invalid option combinations should still work (no conflicting options exist)
\echo[raw=false,silent=false,to=explicit] Explicit\noptions\ttest
\get[explicit]