%% Provider-specific thinking block rendering test
%% Tests that different providers get correct thinking block labels
%% This verifies anthropic, gemini, openai, and mock provider rendering

%% Setup client and session for testing
\anthropic-client-new provider-test-client
\get[_client_id]
\session-new provider-test-session

%% Test Anthropic/Claude provider rendering
\echo Testing Anthropic provider thinking blocks
\model-new[catalog_id="CS4", max_tokens=100, description="Anthropic Claude model for testing thinking blocks"] test-claude
\model-activate test-claude
\session-add-usermsg This is a test message for Claude thinking blocks.
\llm-call

%% Test Gemini provider rendering  
\echo Testing Gemini provider thinking blocks
