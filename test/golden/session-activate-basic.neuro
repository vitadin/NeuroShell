%% Test basic session-activate functionality
\set[_echo_command="true"]

%% Create multiple sessions to test activation
\session-new[system="You are a helpful assistant"] session_one
\session-new[system="You are a code reviewer"] session_two
\session-new[system="You are a data analyst"] session_three

%% Test basic activation by name
\session-activate session_one
\get[#active_session_name]
\get[#active_session_id] 

%% Test activation by exact match
\session-activate session_two
\get[#active_session_name]
\get[#active_session_id]

%% Test activation by ID using system variable (use short ID for test mode)
\session-new test_id_session
\get[#session_id]
\session-activate[id=true] ${#session_id}
\get[#active_session_name]

%% Test activation with [id=true] option using explicit short ID
\session-activate[id=true] 00000001
\get[#active_session_name]

%% Clean up - delete all created sessions
\session-delete session_one
\session-delete session_two  
\session-delete session_three
\session-delete test_id_session