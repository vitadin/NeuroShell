%% Echo command raw mode functionality test
\set[_echo_command="true"]
%% Tests raw option for escape sequence handling

%% Test normal mode (default) - escape sequences are interpreted
\echo[raw=false] Line 1\nLine 2\tTabbed

%% Test raw mode - escape sequences shown literally
\echo[raw=true] Line 1\nLine 2\tTabbed

%% Test storing raw content in variable
\echo[raw=true,to=literal] Raw\n\tescapes
\get[literal]

%% Test storing interpreted content in variable
\echo[raw=false,to=interpreted] Interpreted\n\tescapes
\get[interpreted]

%% Test various escape sequences in raw mode
\echo[raw=true] Multiple escapes: \n\t\r\\\"\'

%% Test various escape sequences in normal mode
\echo[raw=false] Multiple escapes: \n\t\r\\\"\'

%% Test default behavior (should be raw=false)
\echo Default mode: \n\t\r

%% Test raw mode with quotes
\echo[raw=true] Quotes: \"Hello\" and \'World\'

%% Test normal mode with quotes
\echo[raw=false] Quotes: \"Hello\" and \'World\'