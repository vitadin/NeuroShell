Setting _echo_commands = true
%%> \set[cmd="\echo"]
Setting cmd = \echo
%%> ${cmd} Hello World
%%> [expanded] \echo Hello World
Hello World
%%> \set[greeting="Hello"]
Setting greeting = Hello
%%> \set[name="Claude"]
Setting name = Claude
%%> ${cmd} ${greeting}, ${name}!
%%> [expanded] \echo Hello, Claude!
Hello, Claude!
%%> \set[getcmd="\get"]
Setting getcmd = \get
%%> ${getcmd}[greeting]
%%> [expanded] \get[greeting]
greeting = Hello
%%> \set[setcmd="\set"]
Setting setcmd = \set
%%> ${setcmd}[result="Success"]
%%> [expanded] \set[result="Success"]
Setting result = Success
%%> \get[result]
result = Success
%%> \set[echocmd="\echo"]
Setting echocmd = \echo
%%> ${echocmd}[to=output] Testing macro expansion
%%> [expanded] \echo[to=output] Testing macro expansion
Testing macro expansion
%%> \get[output]
output = Testing macro expansion
%%> \set[full_echo_cmd="\echo[style=green]"]
Setting full_echo_cmd = \echo[style=green]
%%> ${full_echo_cmd} This should be green
%%> [expanded] \echo[style=green] This should be green
This should be green
%%> \set[complex_cmd="\echo[raw=true,to=complex_result]"]
Setting complex_cmd = \echo[raw=true,to=complex_result]
%%> ${complex_cmd} Raw\nOutput\tTest
%%> [expanded] \echo[raw=true,to=complex_result] Raw\nOutput\tTest
Raw\nOutput\tTest
%%> \get[complex_result]
complex_result = Raw\nOutput\tTest